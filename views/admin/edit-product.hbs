<div class="bg-gray-200">
  <main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-100"
      style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80');">
      <span class="mask bg-gradient-dark opacity-6"></span>
      <div class="container my-auto">
        <div class="row">
          <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
              <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                  <h4 class="text-black font-weight-bolder text-center mt-2 mb-0">Edit product</h4>

                </div>
              </div>
              <div class="card-body">
                <form role="form" class="text-start" method="post">

                  <div class="input-group input-group-outline my-3">
                    <input type="text" class="form-control" name="edit_name" placeholder="Name">
                  </div>

                  <div class="input-group input-group-outline mb-3">
                    Category: 
                    <select name="edit_category" class="rounded">
                      <option value="Clothing">Clothing</option>
                      <option value="Shoes">Shoes</option>
                      <option value="Bags">Bags</option>
                      <option value="Accessory">Accessories</option>
                    </select>

                  </div>

                  <div class="input-group input-group-outline mb-3">
                      Branding: 
                    <select name="edit_branding" class="rounded">
                      <option value="LuoisVuitton">LuoisVuitton</option>
                      <option value="Gucci">Gucci</option>
                      <option value="Channel">Channel</option>
                      <option value="Hermes">Hermes</option>
                    </select>
                  </div>

                  {{!-- <div class="input-group input-group-outline mb-3">
                    <input type="text" class="form-control" name="edit_status" placeholder="Status">
                  </div> --}}

                  <div class="input-group input-group-outline mb-3">
                    Status:
                    <select name="edit_status" class="rounded">
                      <option value="On stock">On stock</option>
                      <option value="Out of stock">Out of stock</option>
                      <option value="Suspend">Suspend</option>
                    </select>
                    <br>
                  </div>
                  {{#if error}}
                  <div class="error">
                    {{error}}
                  </div>

                  {{/if}}
                  <div id="finish-editing" class="text-center">

                    <button class="btn bg-gradient-primary w-100 my-4 mb-2" name="edit_product"
                      value="edit">Finish</button>
                  </div>
                  <div id="delete" class="text-center">
                    <button class="btn bg-gradient-primary w-100 my-4 mb-2" name="edit_product" value="delete">Delete
                      product</button>
                  </div>

                  <div id="back" class="text-center">
                    <button class="btn bg-gradient-primary w-100 my-4 mb-2" name="edit_product" value="back">Back to
                      tables</button>
                  </div>


                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>