        function myFunction() {
            color = document.getElementById("a-add-to-wishlist").style.color
            if (color == "red") {
                document.getElementById("a-add-to-wishlist").style.color = "black"
            } else {
                document.getElementById("a-add-to-wishlist").style.color = "red"
            }

        }
        current_star = 1
        function change_color_hover(id) {
            for (let j = 1; j <= 5; j++) {
                element_id = "div-user-rating-i" + j
                // console.log(document.getElementById(element_id).classList)
                current_star = 1
                if (j <= id) {
                    document.getElementById(element_id).classList = "fa fa-star"
                } else {
                    document.getElementById(element_id).classList = "fa fa-star-o"
                }

            }


        }
        function removeThatBlock(element) {
            element = document.getElementById(id)
            target = element.parentNode.closest('tr[name=list-products]')
            list_prods = document.querySelectorAll("tr[name=list-products] h5[name='pprice']")
            list_quans = document.querySelectorAll("tr[name=list-products] h6[name='quan']")

            target.remove();

        }
        function calculate_total_eachprod() {


             list_prods = document.getElementsByName('list-products');

            list_prods = document.querySelectorAll("tr[name=list-products] h5[name='pprice']")
            list_quans = document.querySelectorAll("tr[name=list-products] h6[name='quan']")
            list_totals = document.querySelectorAll("tr[name=list-products] h5[name='total']")

            for (i = 0; i < list_prods.length; i++) {
                list_totals[i].innerText = Number(list_prods[i].innerText) * Number(list_quans[i].innerText)

            }

        }
        function calculate_total() {
           subtotal = 0
           vat = 0.08 * subtotal
            total = subtotal + vat
            return total
        }

        function update_cart_total() {
            list_check = document.querySelectorAll("tr[name=list-products] input[name='check']")
            list_totals = document.querySelectorAll("tr[name=list-products] h5[name='total']")
            cart_total = 0
            for (i = 0; i < list_check.length; i++) {
                if (list_check[i].checked) {
                    cart_total += Number(list_totals[i].innerText)
                }
            }
            vat = 0.08 * cart_total
            total = cart_total + vat

            subtotal_tmp = cart_total.toFixed(1)
            vat_tmp = vat.toFixed(1)
            total_all_tmp = total.toFixed(1)


            document.getElementById("subtotal").innerText = "$ " + subtotal_tmp
            document.getElementById("vat").innerText = "$ " + vat_tmp
            document.getElementById("total_all").innerText = "$ " + total_all_tmp

        }
