<!-- Header Section End -->

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Shopping Cart</h4>
                    <div class="breadcrumb__links">
                        <a href="/home-page">Home</a>
                        <a href="/home-page/shop">Shop</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Name</th>
                                <th>Product Price</th>
                                <th>Number</th>
                                <th>Total</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody id="table">
                            {{#each list_products.products}}
                            <tr name="list-products">
                                <td class="product__cart__item">
                                    <div class="product__cart__item__pic">
                                        <img src="{{img}}" width="90" height="80" alt="">
                                    </div>
                                </td>

                                <td class="product__cart__item">

                                    <h6>{{name}}</h6>

                                </td>
                                <td class="cart__price">
                                    $ <h5 style="display: inline">
                                        {{price}}
                                    </h5>
                                    <br>

                                </td>

                                <td class="quantity__item">
                                    <h6>{{quantity}}</h6>

                                </td>
                                <td class="cart__price">$<h5 style="display: inline" name="total">{{price}}</h5>
                                </td>

                                <td class="cart__close">
                                    <form method="post">
                                        <button type="submit" class="fa fa-close btn btn-light rounded" name="close" value="{{id}}"></button>
                                    </form>
                                </td>

                            </tr>

                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__discount">
                    <h6>Discount codes</h6>
                    <form action="#">
                        <input type="text" placeholder="Coupon code">
                        <button type="submit" href="javascript:void(0);" onclick="Noti({
                                status: 'success',
                                content: 'Success message without animation',
                                timer: 5000,
                                animation: false,
                                progress: true
                            });">
                            Apply</button>
                    </form>
                </div>
                <div class="cart__total">
                    <h6>Cart total</h6>
                    <ul>
                        <!-- <li>Original subtotal <h7 style="float: right; text-decoration: line-through">$ 169.50</h7></li> -->
                        <li>Subtotal <span id="subtotal">$ {{Price}}</span></li>
                        <li>VAT <span id="vat">$ {{Vat}}</span></li>
                        <li>Total <span id="total_all">$ {{Total}}</span></li>
                    </ul>
                    <a class="primary-btn" href="/home-page/checkout" onclick="calculate_total_eachprod()">Proceed to
                        checkout</a>
                    {{#if error}}
                    <p style="color:red;">{{error}}</p>
                    {{/if}}
                    <!-- <a href="" class="primary-btn">Proceed to checkout</a> -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->

<!-- Footer Section Begin -->